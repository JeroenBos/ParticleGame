{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/dist/test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            // "sourceMapPathOverrides": {
            //     "webpack:///./test/*": "${workspaceFolder}/particlegame.view/test/*",
            //     "webpack:///./**.ts": "${workspaceFolder}/particlegame.view/**.ts"
            // },
        }
    ]
}